<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta charset="utf-8">
  <title>
    <%=title %>
  </title>
  <meta name="generator" content="Bootply" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
  <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" />
  <!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
  <link href="css/styles.css" rel="stylesheet">
</head>

<body>
  <header class="navbar navbar-bright navbar-fixed-top" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">Home</a>
      </div>
      <nav class="collapse navbar-collapse" role="navigation">
        <ul class="nav navbar-nav">
          <% for (var i = 0; i <nav.length; i++) { %>
            <li>
              <a href='<%= nav[i].link %>'>
                <%=nav[i].text %>
              </a>
            </li>
            <% } %>
        </ul>
        <ul class="nav navbar-right navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="glyphicon glyphicon-search"></i>
            </a>
            <ul class="dropdown-menu" style="padding:12px;">
              <form class="form-inline">
                <button type="submit" class="btn btn-default pull-right">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
                <input type="text" class="form-control pull-left" placeholder="Search">
              </form>
            </ul>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container">
    <div class="col-md-9 well">
      <div class="well">
      <% if (message.type ==  'error') {  %>
      <div class="alert alert-danger">
      <%=message.message%>
    </div>      
      <% } else if (message.type== 'success') { %>
      <div class="alert alert-success">
      <%=message.message%>
    </div>      
      <% } %>
                <h4 class="center">New Ingredient</h4>
      <form name="recipeDetail" action="/ingredients/newIngredient" method="post">
        <div class="row" >
          <div class="col-md-1">Category</div>
          <div class="col-md-3">
            <select name="ingredientCategory" class="form-control">
              <% for (var i = 0; i <categories.length; i++) { %>
                <li>
                  <option value="<%=categories[i].name%>"><%=categories[i].name%></option>
                </li>
                <% } %>
            </select>
          </div>
          <div class="col-md-1">Name</div>
          <div class="col-md-6">
            <input type="text" class="form-control" name="ingredientName">
          </div>
          <div class="col-md-1 center">
            <label for="staple">staple</label>
            <input type="checkbox" checked name="staple"></div>
        </div>
        <div class="row">
          <div class="col-6 text-center">
            <input type="submit" class="btn-lg btn-primary" value="Add Ingredient" style="margin-top:10px;">
          </div>
        </div>
      </form>
      </div>
      <div class="well well-lg">
        <h4 class="center">All Ingredients</h4>
        <div class="row" >
          <% for (var i = 0; i< ingredients.length; i++) { %>
          <div class="col-md-3" display="inline-block" style="border: 1px red solid;" 
              onclick="window.location.href='/ingredients/deleteIngredient?ingredientName=<%=ingredients[i].name %>'">
            <form name="deleteIngredient" action="/ingredients/deleteIngredient" method="post">
            <div class="row">
              <div class="col-12">
              <h4 style="margin-right:10px;padding-right:10px;" name="ingredientName" value="b"><%=ingredients[i].name %></h4>
              </div>
            </div>
            <div class="row">
            <div class="col-md-9">
            <span class="small"><%=ingredients[i].category %></span>
            </div>
            <div class="col-md-3">
            <% if (ingredients[i].staple == 'yes')  {%>
            <span class="small right">staple</span>
            <% } %>
        </div>
        </div>
            </form>
          </div>
        <% }%>
      </div>
    </div>
  </div>
  <div class="col-md-3 well">
    <h1>Categories</h1>
    <div class="well">
      <form name="addCategory" action="/ingredients/newCategory" method="post">
        <input class="form-control" style="margin-bottom:10px;" name="categoryName" id="categoryName" placeholder="new category name">
        <div class="text-center">
          <input type="submit" class="btn-lg btn-primary" value="Add">
        </div>
      </form>
    </div>
    <div class="well">
      <ul class="list-unstyled">
        <form name="deleteCategory" action="/ingredients/deleteCategory" method="post">
          <% for (var i = 0; i <categories.length; i++) { %>
            <li><input type="submit" class="linkButton" name="categoryName"  value="<%=categories[i].name %>" >
            </li>
            <% } %>
        </form>
      </ul>
    </div>
  </div>
</div>


  <hr>

  <hr>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
        </div>
      </div>
    </div>
  </footer>
  <!-- script references -->
  <script src="/lib/jquery/dist/jquery.js"></script>
  <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
  <script src="bundle.js"></script>
</body>

</html>
