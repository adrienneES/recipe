<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta charset="utf-8">
  <title>
    <%=title %>
  </title>
  <meta name="generator" content="Bootply" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
  <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" />
  <!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
    <link href="css/styles.css" rel="stylesheet">
    <link href="../css/styles.css" rel="stylesheet">
    </head>

<body>
  <header class="navbar navbar-bright navbar-fixed-top" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">Home</a>
      </div>
      <nav class="collapse navbar-collapse" role="navigation">
        <ul class="nav navbar-nav">
          <% for (var i = 0; i <nav.length; i++) { %>
            <li>
              <a href='<%= nav[i].link %>'>
                <%=nav[i].text %>
              </a>
            </li>
            <% } %>
        </ul>
        <ul class="nav navbar-right navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="glyphicon glyphicon-search"></i>
            </a>
            <ul class="dropdown-menu" style="padding:12px;">
              <form class="form-inline">
                <button type="submit" class="btn btn-default pull-right">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
                <input type="text" class="form-control pull-left" placeholder="Search">
              </form>
            </ul>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container">
    <div class="col-md-9 well">
      <div class="well">
      <% if (message.type ==  'error') {  %>
        <div class="alert alert-danger">
          <%=message.message%>
        </div>      
      <% } else if (message.type== 'success') { %>
        <div class="alert alert-success">
          <%=message.message%>
        </div>      
      <% } else if (message.type == 'info') { %>
        <div class="alert alert-info">
          <%=message.message%>
        </div>      
      <% } %>
      <h4 class="center">New Ingredient</h4>
      <form name="recipeDetail" action="/ingredients/saveIngredient" method="post">
        <div class="row" >
          <div class="col-md-1">Category</div>
          <div class="col-md-3">
            <select name="ingredientCategory" class="form-control" >
              <% for (let currentCategory of categories) { %>
                <li>
                  <% if (category == currentCategory.name) { %>
                  <option selected value="<%=currentCategory.name%>"><%=currentCategory.name%></option>
                  <% } else { %>
                  <option value="<%=currentCategory.name%>"><%=currentCategory.name%></option>
                  <% } %>
                </li>
                <% } %>
            </select>
          </div>
          <div class="col-md-1">Name</div>
          <div class="col-md-6">
            <input type="text" class="form-control" name="ingredientName" value="<%=name%>">
          </div>
        </div>
        <div class="row">
          <div class="col-6 text-center">
            <input type="submit" class="btn-primary" value="Add Ingredient" style="margin-top:10px;">
          </div>
        </div>
      </form>
      </div>
      <div class="well well-lg">
        <h4 class="center">All Ingredients</h4>
        <div class="row" >
          <% for ( ingredient of ingredients) { %>
          <div class="col-md-3 well tall" display="inline-block" onclick="window.location.href='/ingredients/editIngredient?ingredientName=<%=ingredient.name %>'">
            <form name="deleteIngredient" action="/ingredients/deleteIngredient" method="post">
              <div class="row">
                <div class="col-12">
                  <button type="submit" class="close" value="<%=ingredient.name%>" name="ingredientName">X</button>
                  <h4 style="margin-right:10px;padding-right:10px;" name="ingredientName" value="b"><%=ingredient.name %></h4>
                  <span class="small"><%=ingredient.category %></span>
                </div>
              </div>
            </form>
          </div>
        <% }%>
      </div>
    </div>
  </div>
</div>


  <hr>

  <hr>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
        </div>
      </div>
    </div>
  </footer>
  <!-- script references -->
  <script src="/lib/jquery/dist/jquery.js"></script>
  <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
  <script src="bundle.js"></script>
</body>

</html>
