<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta charset="utf-8">
  <title>
    <%=recipe.name %>
  </title>
  <meta name="generator" content="Bootply" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
  <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" />
  <!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
  <link href="../css/styles.css" rel="stylesheet">
  <link href="../../css/styles.css" rel="stylesheet">
  <script src="/lib/jquery/dist/jquery.js"></script>
  <script>
  function myAlert(message) {
    if ($("#visibilityButton").text() == 'hide') {
      $("#panel").hide();
      $("#visibilityButton").text("show");
    } else {
      $("#panel").show();
      $("#visibilityButton").text("hide");
    }
  };
  function alert2() {
    alert('second');
  }</script>
</head>

<body>
  <header class="navbar navbar-bright navbar-fixed-top" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">Home</a>
      </div>
      <nav class="collapse navbar-collapse" role="navigation">
        <ul class="nav navbar-nav">
          <% for (var i = 0; i <nav.length; i++) { %>
            <li>
              <a href='<%= nav[i].link %>'>
                <%=nav[i].text %>
              </a>
            </li>
            <% } %>
        </ul>
        <ul class="nav navbar-right navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="glyphicon glyphicon-search"></i>
            </a>
            <ul class="dropdown-menu" style="padding:12px;">
              <form class="form-inline">
                <button type="submit" class="btn btn-default pull-right">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
                <input type="text" class="form-control pull-left" placeholder="Search">
              </form>
            </ul>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
      <button onclick="myAlert('hide');" id="visibilityButton"><span>hide</span></button>
      <% if (message.type ==  'error') {  %>
      <div class="alert alert-danger">
        <%=message.message%>
      </div>      
    <% } else if (message.type== 'success') { %>
      <div class="alert alert-success">
        <%=message.message%>
      </div>      
    <% } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 well" id="panel">
        <form name="recipeDetailForm" action="/recipes/addRecipe" method="POST">
          <div class="row">
            <div class="col-sm-3">
              <label for="name">Image:</label>
              <br/>
              <input style="margin-bottom:10px;" name="image" id="image" placeholder="" value="">
              <input type="button" name="add" value="add" onclick="recipeImage.src=image.value;" />
              <center>
                <img width="100%" id="recipeImage" name="recipeImage" src="<%=recipe.image %>" />
              </center>
            </div>
            <div class="col-sm-9">
              <div class="row">
                <div class="col-sm-5">
                    <label for="name">Recipe Name</label>
                    <input style="margin-bottom:10px;"  class="form-control" name="name" id="name" value="<%=recipe.name %>">
                </div>
                <div class="col-sm-4">
                    <label for="name">cook time</label>
                    <input style="margin-bottom:10px;" class="form-control" name="timetoCook" id="timetoCook" value="<%=recipe.timetoCook %>">
                </div>
                  <div class="col-sm-3">
                    <center>
                    <label for="addedToWeek">add to week</label><br/>
                    <% if (recipe.addedToWeek == 1) {%>
                      <input name="addedToWeek"  class="center"  type="checkbox" checked></center>
                    <% } else {%>
                     <input name="addedToWeek"  class="center"  type="checkbox" ></center>
                    <% }%>
                  </div>
                    </div>
              <div class="row">
                <div class="col">
                  <label for="description">description</label>
                  <textarea rows="4" class="form-control" style="margin-bottom:10px;" name="description" id="description"><%=recipe.description %></textarea>
                  <center>
                    <input type="submit" class="center btn-lg btn-primary" style="margin-top:20px;" value="Create Recipe">
                    <input type="button" class=" btn-lg btn-primary" style="margin-top:20px;" value="Delete Recipe" onclick="window.location.href='/recipes/deleteRecipes?name=<%=recipe.name %>'">
                    <input type="button" class=" btn-lg btn-primary" style="margin-top:20px;" value="  New Recipe  " onclick="window.location.href='/recipes/recipeDetail'">
                  </center>
              </div>
            </div>
          </div>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 well">
        <div class="center bottom-pad">
          <h3>
            <%=recipe.name%>
          </h3>
        </div>
        <div class="row">
          <div class="col-md-6 well well-lg">
              <div class="center ">
                <h4>Ingredients</h4>
              </div>
              <form name="addIngredient" action="/recipes/addIngredient?name=<%=recipe.name%>" method="POST">
              <div class="row">
                  <div class="col-md-9">
                      <select name="selectedIngredient" class="form-control" >
                          <% for (var i = 0; i <ingredients.length; i++) { %>
                              <option value="<%=ingredients[i].name%>"><%=ingredients[i].name%></option>
                            <% } %>
                        </select>
                  </div>
                  <div class="col-md-3 center">
                    <input type="submit" class=" btn-lg btn-primary" value="Add">
                  </div>
                </div>
              </form>
              <ul>
                  <% for (let recipeIngredient of recipeIngredients) { %>
                      <li onclick="alert('want to delete <%=recipeIngredient.ingredient%>')";><%=recipeIngredient.ingredient%></li>
                <% } %>
              </ul>
          </div>
          <div class="col-md-6 well">
            <div class="center">
              <h4>Directions</h4>
            </div>
            <div>
              <form action="/recipes/addDirection?name=<%=recipe.name%>" method="Post">
                <div class="row well">
                  <div class="col-12">
                    <div class="row">
                      <div class="col">
                      <textarea class="form-control" type="type" name="direction" id="direction"></textarea>
                      </div>
                  </div>
                  <div class="row"  style="border:1px black solid" >
                    <div class="col-md-2">
                      <label for="stepNumber">step #</label>
                      </div>
                      <div class="col-md-2">
                        <input type="text" class="form-control" name="stepNumber" id="stepNumber"/>
                    </div>
                    <div class="col-md-8">
                    <div class="left-padding">
                    <button type="submit" class="btn btn-primary" value="add">add</button>
                  </div>
                </div>
                </div>
                <div class="row">
                <div class="col">
              </form>
              <% for (let direction of directions)  {%>
              <div onclick="window.location.href='/recipes/deleteDirection?name=<%=recipe.name%>.<%=direction.stepNumber%>'""><%=direction.stepNumber%>: <%=direction.direction%></div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <!-- /cont -->
